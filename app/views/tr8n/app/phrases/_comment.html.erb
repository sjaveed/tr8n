<td style="padding:5px; width:180px;">
  <div style="width:60px;display:inline-block; vertical-align: top; padding-top:5px;">
    <%=tr8n_user_mugshot_tag(comment.translator, :linked => true)%>
  </div>
  <div style="width:100px;display:inline-block; vertical-align: top">
    <%=tr8n_translator_tag(comment.translator, :linked => true)%>
    <div style="font-size:11px;color:grey;<%=tr8n_style_attribute_tag('text-align', 'left')%>;">
      <%=tr8n_when_string_tag(comment.created_at).html_safe %>
    </div>
    <div class="tr8n_text_align_left muted" style="">
      <%= tr8n_language_flag_tag(comment.language) %>
      <%=comment.language.english_name %>
    </div>
  </div>
  <div style="padding-left:3px;">
    <%=tr8n_translator_rank_tag(comment.translator, nil, :style=>"width:10px;")%>
  </div>
</td>
<td class="tr8n_text_align_left" style="padding:5px; width:700px;vertical-align: top;">
  <%=comment.toHTML %>
</td>
<td style="padding:5px; width:100px; vertical-align:top;" class="tr8n_text_align_right">
    <% if tr8n_current_user_is_translator? and comment.translator == tr8n_current_translator %>
      <%=link_to(tra("Delete", "Link to delete forum message"), {:action => :delete_comment, :comment_id => comment.id}, {:confirm => trla("Are you sure you want to delete this comment?")})%>
    <% else %>
      <%=link_to_function(tra("Report", "Link to report an abusive forum message"), "Tr8n.UI.Lightbox.show('/tr8n/dashboard/lb_report?comment_id=#{comment.id}', {width:600, height:340})")%>
    <% end %>
</td>

